{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "02 - run gongfly with diagrams",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}/go/cmd/gongfly"
      },
      "command": "go",
      "args": [
        "run",
        "main.go",
        "-diagrams",
        // "-logGIN",
        // "-noEmbed"
      ],
      "group": "build"
    },
    {
      "label": "02 - run gongfly w/o diagrams",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}/go/cmd/gongfly"
      },
      "command": "go",
      "args": [
        "run",
        "main.go",
        "-diagrams=false"
      ],
      "group": "build"
    },
    {
      "label": "03 - lsof -i tcp:8080 ",
      "type": "shell",
      "command": "lsof -i tcp:8080 ",
      "group": "build"
    },
    {
      "label": "05 - go test gongfly",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}/go/tests"
      },
      "command": "go",
      "args": [
        "test"
      ],
      "group": "build"
    },
    {
      "label": "03 - ng build",
      "type": "shell",
      "command": "cd ng; ng build",
      "group": "build",
      "problemMatcher": []
    },
    {
